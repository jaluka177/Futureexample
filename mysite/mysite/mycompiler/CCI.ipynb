    "#######CCI範例\n",
    "def CCI(df, n):  \n",
    "    PP = (df['High'] + df['Low'] + df['Close']) / 3  \n",
    "    CCI = pd.Series((PP - pd.rolling_mean(PP, n)) / pd.rolling_std(PP, n), name = 'CCI_' + str(n))  \n",
    "    df = df.join(CCI)  \n",
    "    return df"
   ]
